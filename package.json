{
  "type": "module",
  "name": "deluminate",
  "version": "1.0.0",
  "description": "Invert the luminance of a website to make it easier on the eyes.",
  "scripts": {
    "lint": "eslint *.js",
    "test": "mocha spec/common.spec.js",
    "deploy": "./deploy --release",
    "deploy-dev": "./deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abstiles/deluminate.git"
  },
  "keywords": [
    "chrome",
    "extension",
    "invert",
    "luminance",
    "dark",
    "contrast"
  ],
  "author": "Anjou Stiles",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/abstiles/deluminate/issues"
  },
  "homepage": "https://deluminate.github.io",
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "chrome-webstore-upload-cli": "^1.1.1",
    "eslint": "^9.8.0",
    "expect": "^29.7.0",
    "globals": "^15.9.0",
    "jsdom": "^24.1.1",
    "mocha": "^10.7.3",
    "mock-local-storage": "^1.0.2"
  },
  "jshintConfig": {
    "esversion": 13,
    "browser": true,
    "loopfunc": true,
    "laxbreak": true,
    "laxcomma": true,
    "sub": true,
    "asi": true,
    "expr": true,
    "eqnull": true,
    "-W032": true,
    "-W041": true
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "webextensions": true
    }
  }
}
